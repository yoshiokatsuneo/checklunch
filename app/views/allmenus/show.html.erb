<%- model_class = @allmenu.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:title) %>:</strong><br>
  <%= @allmenu.title %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:date) %>:</strong><br>
  <%= @allmenu.date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:price) %>:</strong><br>
  <%= @allmenu.price %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:restrant_id) %>:</strong><br>
  <%= @allmenu.restrant_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              allmenus_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_allmenu_path(@allmenu), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              allmenu_path(@allmenu),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
