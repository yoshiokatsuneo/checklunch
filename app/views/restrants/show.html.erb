<%- model_class = @restrant.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @restrant.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:url) %>:</strong><br>
  <%= @restrant.url %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:logo_url) %>:</strong><br>
  <%= @restrant.logo_url %>
</p>
<%= link_to t('.back', :default => t("Menus")),
            restrant_menus_path(@restrant), :class => 'btn'  %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restrants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restrant_path(@restrant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restrant_path(@restrant),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
