<h1>Listing menus</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Price</th>
    <th>Restrant</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.title %></td>
    <td><%= menu.date %></td>
    <td><%= menu.price %></td>
    <td><%= menu.restrant %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

