<%- model_class = @menu.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:title) %>:</strong><br>
  <%= @menu.title %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:date) %>:</strong><br>
  <%= @menu.date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:price) %>:</strong><br>
  <%= @menu.price %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:restaurant_id) %>:</strong><br>
  <%= @menu.restaurant_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurant_menus_path(@restaurant), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_menu_path(@restaurant,@menu), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_menu_path(@restaurant, @menu),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
